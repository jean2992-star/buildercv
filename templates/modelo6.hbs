<!-- Modelo 6 – Sidebar clara + faixa vinho no resumo -->
<div class="cv m6-bordeaux">
  <aside class="left">
    {{#if photo}}
    <div class="photo"><img src="{{photo}}" alt="Foto"></div>
    {{/if}}

    <section class="box">
      <h3>Contato</h3>
      {{#if local}}<p class="muted">{{local}}</p>{{/if}}
      {{#if telefone}}<p class="muted">{{telefone}}</p>{{/if}}
      {{#if email}}<p class="muted">{{email}}</p>{{/if}}
      {{#if links}}<p class="multiline small">{{links}}</p>{{/if}}
    </section>

    {{#if educacao.length}}
    <section class="box">
      <h3>Formação Acadêmica</h3>
      {{#each educacao}}
      <p class="edu">
        <strong>{{instituicao}}</strong><br/>
        <span class="muted">{{local}}</span><br/>
        <em>{{curso}}</em><br/>
        <small>{{inicio}}{{#if fim}} – {{fim}}{{/if}}</small>
      </p>
      {{/each}}
    </section>
    {{/if}}

    {{#if skills}}
    <section class="box">
      <h3>Habilidades</h3>
      <p class="multiline small">{{skills}}</p>
    </section>
    {{/if}}

    {{#if idiomas}}
    <section class="box">
      <h3>Idiomas</h3>
      <div class="langs">
        {{#each (splitLines idiomas)}}
          {{#if this}}
          <div class="lang">
            <span class="label">{{langName this}}</span>
            <div class="bar"><span style="width: {{nivelWidth this}};"></span></div>
          </div>
          {{/if}}
        {{/each}}
      </div>
    </section>
    {{/if}}
  </aside>

  <main class="right">
    <header class="head">
      <h1>{{nome}}</h1>
      {{#if titulo}}<div class="role">{{titulo}}</div>{{/if}}
    </header>

    {{#if resumo}}
    <section class="summary">
      <p class="multiline">{{resumo}}</p>
    </section>
    {{/if}}

    {{#if experiencias.length}}
    <section class="block">
      <h2>Experiência Profissional</h2>
      {{#each experiencias}}
      <article class="xp">
        <div class="xp-head">
          <strong>{{empresa}}</strong> — <em>{{cargo}}</em>
          <span class="period">{{inicio}}{{#if fim}} – {{fim}}{{/if}}</span>
        </div>
        <ul class="bullets">
          {{#each (splitLines descricao)}}{{#if this}}<li>{{this}}</li>{{/if}}{{/each}}
        </ul>
      </article>
      {{/each}}
    </section>
    {{/if}}

    {{#if cursos}}
    <section class="block">
      <h2>Cursos e Certificações</h2>
      <p class="multiline">{{cursos}}</p>
    </section>
    {{/if}}

    {{#if atividades}}
    <section class="block">
      <h2>Atividades</h2>
      <p class="multiline">{{atividades}}</p>
    </section>
    {{/if}}

    {{#if infoExtra}}
    <section class="block">
      <h2>Informações Complementares</h2>
      <p class="multiline">{{infoExtra}}</p>
    </section>
    {{/if}}
  </main>
</div>
