<div class="cv m1">
  <header class="head">
    <h1>{{nome}}</h1>
    {{#if titulo}}<div class="role">{{titulo}}</div>{{/if}}

    <div class="contact">
      {{#if telefone}}<span>üìû {{telefone}}</span>{{/if}}
      {{#if email}}<span>‚úâÔ∏è {{email}}</span>{{/if}}
      {{#if links}}<span>üîó {{links}}</span>{{/if}}
      {{#if local}}<span>üìç {{local}}</span>{{/if}}
    </div>
  </header>

  {{#if resumo}}
  <section class="block">
    <h2>OBJETIVOS</h2>
    <p>{{resumo}}</p>
  </section>
  {{/if}}

  {{#if experiencias.length}}
  <section class="block">
    <h2>EXPERI√äNCIAS</h2>
    {{#each experiencias}}
      <article class="xp">
        <div class="line1">
          <strong class="cargo">{{cargo}}</strong> ¬∑ <span class="empresa">{{empresa}}</span>
        </div>
        <div class="period">{{inicio}} {{#if fim}}‚Äì {{fim}}{{/if}}</div>
        <ul class="bullets">
          {{#each (splitLines descricao)}}
            {{#if this}}<li>{{this}}</li>{{/if}}
          {{/each}}
        </ul>
      </article>
    {{/each}}
  </section>
  {{/if}}

  {{#if educacao.length}}
  <section class="block">
    <h2>FORMA√á√ÉO</h2>
    {{#each educacao}}
      <p class="edu">
        <strong>{{inicio}} ‚Äì {{fim}}</strong> ¬∑ <strong>{{instituicao}}</strong><br/>
        {{curso}}
      </p>
    {{/each}}
  </section>
  {{/if}}

  {{#if projetos.length}}
  <section class="block">
    <h2>PROJETOS</h2>
    <ul class="list">
      {{#each projetos}}
        <li><strong>{{titulo}}</strong>: {{descricao}} {{#if link}}(<a href="{{link}}">{{link}}</a>){{/if}}</li>
      {{/each}}
    </ul>
  </section>
  {{/if}}

  {{#if skills}}
  <section class="block">
    <h2>HABILIDADES</h2>
    <p class="multiline">{{skills}}</p>
  </section>
  {{/if}}

  {{#if idiomas}}
  <section class="block">
    <h2>IDIOMAS</h2>
    <p class="multiline">{{idiomas}}</p>
  </section>
  {{/if}}

  {{!-- Extras opcionais (se voc√™ preencheu no form) --}}
  {{#if cursos}}
  <section class="block">
    <h2>CURSOS E CERTIFICA√á√ïES</h2>
    <p class="multiline">{{cursos}}</p>
  </section>
  {{/if}}

  {{#if softwares}}
  <section class="block">
    <h2>SOFTWARES</h2>
    <p class="multiline">{{softwares}}</p>
  </section>
  {{/if}}

  {{#if atividades}}
  <section class="block">
    <h2>ATIVIDADES</h2>
    <p class="multiline">{{atividades}}</p>
  </section>
  {{/if}}

  {{#if infoExtra}}
  <section class="block">
    <h2>INFORMA√á√ïES COMPLEMENTARES</h2>
    <p class="multiline">{{infoExtra}}</p>
  </section>
  {{/if}}
</div>
