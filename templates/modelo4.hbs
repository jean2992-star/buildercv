<!-- Modelo 4 – Sidebar clara + header com foto (igual à imagem) -->
<div class="cv m4">
  <div class="page-frame">
    <aside class="col-left">
      <h3>Contato</h3>
      {{#if links}}<p class="muted">{{links}}</p>{{/if}}
      {{#if telefone}}<p class="muted">{{telefone}}</p>{{/if}}
      {{#if email}}<p class="muted">{{email}}</p>{{/if}}
      {{#if local}}<p class="muted">{{local}}</p>{{/if}}

      {{#if skills}}
      <h3>Habilidades E<br/>Competências</h3>
      <p class="multiline">{{skills}}</p>
      {{/if}}

      {{#if idiomas}}
      <h3>Idiomas</h3>
      <div class="idiomas">
        {{!-- Se você escrever linhas no formato "Português: C1" etc,
             o helper abaixo desenha a barrinha. Caso contrário, vira lista normal. --}}
        {{#each (splitLines idiomas)}}
          {{#if this}}
          <div class="idioma">
            <span class="nome">{{langName this}}</span>
            <div class="bar"><span style="width: {{nivelWidth this}};"></span></div>
          </div>
          {{/if}}
        {{/each}}
      </div>
      {{/if}}
    </aside>

    <main class="col-right">
      <header class="head">
        <div class="title">
          <h1>{{nome}}</h1>
          {{#if titulo}}<div class="role">{{titulo}}</div>{{/if}}
        </div>
        {{#if photo}}
        <div class="photo"><img src="{{photo}}" alt="Foto"></div>
        {{/if}}
      </header>

      {{#if resumo}}
      <section class="block">
        <h2>Resumo</h2>
        <p>{{resumo}}</p>
      </section>
      {{/if}}

      {{#if experiencias.length}}
      <section class="block">
        <h2>Experiência Profissional</h2>
        {{#each experiencias}}
        <article class="xp">
          <strong>{{cargo}}</strong> — {{empresa}}
          <small>({{inicio}}{{#if fim}} – {{fim}}{{/if}})</small>
          <ul class="bullets">
            {{#each (splitLines descricao)}}
              {{#if this}}<li>{{this}}</li>{{/if}}
            {{/each}}
          </ul>
        </article>
        {{/each}}
      </section>
      {{/if}}

      {{#if educacao.length}}
      <section class="block">
        <h2>Formação Acadêmica</h2>
        {{#each educacao}}
          <p><strong>{{instituicao}}</strong>, {{local}}
          <br/>{{curso}} <small>({{inicio}}–{{fim}})</small></p>
        {{/each}}
      </section>
      {{/if}}

      {{!-- Extras opcionais --}}
      {{#if cursos}}
      <section class="block"><h2>Cursos</h2><p class="multiline">{{cursos}}</p></section>
      {{/if}}
      {{#if atividades}}
      <section class="block"><h2>Atividades</h2><p class="multiline">{{atividades}}</p></section>
      {{/if}}
      {{#if infoExtra}}
      <section class="block"><h2>Informações Complementares</h2><p class="multiline">{{infoExtra}}</p></section>
      {{/if}}
    </main>
  </div>
</div>
