          <div class="top">
            <strong>{{cargo}}</strong> ‚Äî {{empresa}}
            <small>({{inicio}}{{#if fim}} ‚Äì {{fim}}{{/if}})</small>
          </div>
          <ul class="bullets">
            {{#each (splitLines descricao)}}{{#if this}}<li>{{this}}</li>{{/if}}{{/each}}
          </ul>
        </div>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/if}}

  {{#if educacao.length}}
  <section>
    <h2>Educa√ß√£o</h2>
    {{#each educacao}}
      <p><strong>{{curso}}</strong> ‚Äî {{instituicao}} <small>({{inicio}}‚Äì{{fim}})</small></p>
    {{/each}}
  </section>
  {{/if}}

  {{#if skills}}<section><h2>Habilidades</h2><p>{{skills}}</p></section>{{/if}}
  {{#if idiomas}}<section><h2>Idiomas</h2><p>{{idiomas}}</p></section>{{/if}}

