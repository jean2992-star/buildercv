<!-- Modelo 10 ‚Äì Top Banner com Foto -->
<div class="cv m10">
  <header class="banner">
    <div class="photo">
      {{#if photo}}<img src="{{photo}}" alt="Foto">{{/if}}
    </div>
    <div class="info">
      <h1>{{nome}}</h1>
      {{#if titulo}}<div class="role">{{titulo}}</div>{{/if}}
      <div class="contact">
        {{#if email}}<span>‚úâÔ∏è {{email}}</span>{{/if}}
        {{#if telefone}}<span>üìû {{telefone}}</span>{{/if}}
        {{#if local}}<span>üìç {{local}}</span>{{/if}}
        {{#if links}}<span>üîó {{links}}</span>{{/if}}
      </div>
    </div>
  </header>

  {{#if resumo}}
  <section class="block">
    <h2>Resumo</h2>
    <p>{{resumo}}</p>
  </section>
  {{/if}}

  <div class="cols">
    <main>
      {{#if experiencias.length}}
      <section class="block">
        <h2>Experi√™ncia</h2>
        {{#each experiencias}}
        <article class="xp">
          <div class="line1">
            <strong>{{cargo}}</strong> ‚Äî {{empresa}} <small>({{inicio}}{{#if fim}} ‚Äì {{fim}}{{/if}})</small>
          </div>
          <ul class="bullets">
            {{#each (splitLines descricao)}}{{#if this}}<li>{{this}}</li>{{/if}}{{/each}}
          </ul>
        </article>
        {{/each}}
      </section>
      {{/if}}
    </main>

    <aside>
      {{#if educacao.length}}
      <section class="block">
        <h2>Educa√ß√£o</h2>
        {{#each educacao}}
          <p><strong>{{curso}}</strong><br/><span class="muted">{{instituicao}}</span> <small>({{inicio}}‚Äì{{fim}})</small></p>
        {{/each}}
      </section>
      {{/if}}

      {{#if skills}}<section class="block"><h2>Habilidades</h2><p>{{skills}}</p></section>{{/if}}
      {{#if idiomas}}<section class="block"><h2>Idiomas</h2><p>{{idiomas}}</p></section>{{/if}}
      {{#if projetos.length}}
      <section class="block">
        <h2>Projetos</h2>
        <ul class="list">
          {{#each projetos}}
            <li><strong>{{titulo}}</strong>: {{descricao}} {{#if link}}(<a href="{{link}}">{{link}}</a>){{/if}}</li>
          {{/each}}
        </ul>
      </section>
      {{/if}}
    </aside>
