<section class="block">
  <h2>Cursos e Certifica√ß√µes</h2>
  <p class="multiline">{{cursos}}</p>
</section>
{{/if}}

{{#if softwares}}
<section class="block">
  <h2>Softwares</h2>
  <p class="multiline">{{softwares}}</p>
</section>
{{/if}}

{{#if atividades}}
